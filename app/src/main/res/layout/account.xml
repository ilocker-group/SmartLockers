<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".Account">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="8dp"
        android:id="@+id/accAvatarImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/logo"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:id="@+id/accUsernameTxt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#111"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/accAvatarImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:id="@+id/accEditProfileButt"
        android:layout_below="@+id/accUsernameTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#50ce72"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:textColor="#fff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:id="@+id/accActivityButt"
        android:background="#de2920"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:textColor="#fff"
        android:layout_below="@+id/accEditProfileButt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/acclogOutButt"
        android:background="#0f1817"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:textColor="#fff"
        android:layout_below="@+id/accActivityButt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <!-- TAB BAR -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tab_home"
            android:textAllCaps="false"
            android:background="@drawable/tab_home"
            android:layout_gravity="center_horizontal"
            android:text="Home"
            android:paddingTop="30dp"
            android:textSize="10dp" />

        <Button
            android:id="@+id/tab_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:background="@drawable/tab_account"
            android:backgroundTint="#de2920"
            android:paddingTop="30dp"
            android:text="Account"
            android:textAllCaps="false"
            android:textColor="#de2920"
            android:textSize="10dp"/>
    </LinearLayout>


</RelativeLayout>
